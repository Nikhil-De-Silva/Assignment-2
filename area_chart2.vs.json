{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 900,
    "height": 500,
    "description": "Walmart's stock price over time.",
    "data": {
      "url": "https://raw.githubusercontent.com/Nikhil-De-Silva/Assignment-2/main/WMT%20Historical%20Data%20(2).csv"
    },
    
    "mark": {
      "type": "area",
      "line": {
        "color": "darkgreen"
      },
      "color": {
        "x1": 1,
        "y1": 1,
        "x2": 1,
        "y2": 0,
        "gradient": "linear",
        "stops": [
          {
            "offset": 0,
            "color": "white"
          },
          {
            "offset": 1,
            "color": "darkgreen"
          }
        ]
      }
    },
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal"
      },
      "y": {
        "field": "Open",
        "type": "quantitative"
      }
    }
  }
  