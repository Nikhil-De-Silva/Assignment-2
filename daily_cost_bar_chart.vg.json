{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/Nikhil-De-Silva/Assignment-2/main/WMT%20Historical%20Data%20(2).csv"
    },
    "title": "Walmart Stock Opening price since 2018",
    "width": 800,
    "height": 500,
    "config": {
        "view": {
            "strokeWidth": 0,
            "step": 13
        },
        "axis": {
            "domain": false
        }
    },
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "Date",
            "timeUnit": "date",
            "type": "ordinal",
            "title": "Day",
            "axis": {
                "labelAngle": 0,
                "format": "%e"
            }
        },
        "y": {
            "field": "Date",
            "timeUnit": "month",
            "type": "ordinal",
            "title": "Month"
        },
        "color": {
            "field": "Open",
            "aggregate": "max",
            "type": "quantitative",
            "legend": {
                "title": null
            }
        }
    }
  }
  
  
  
  